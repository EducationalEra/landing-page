							img(src='/img/anticorr/partners/TeachforUkraine-logo.png', alt='Навчай для України')

		section.materials_features.archive
			.container
				p.additional Проєкт реалізовано в межах програми UNICEF Україна «Створення попиту та розвиток потенціалу щодо інтегрованих соціальних послуг та вакцинації» за підтримки Агентства США з міжнародного розвитку (USAID).
			.container
				ul.partners_list
					li
						a(href='https://www.usaid.gov/uk/ukraine', target='_blank', title='USAID')
							img(src='/img/vaccination/partners/USAID.png', alt='USAID')
					li
						a(href='https://www.unicef.org/', target='_blank', title='UNICEF')
							img(src='/img/vaccination/partners/UNICEF_LOGO_CYAN.png', alt='UNICEF')

			.container
				ul.partners_list
					li
						a(href='https://www.ed-era.com/', target='_blank', title='Ed-Era')
							img(src='/img/vaccination/edera_logo.png', alt='Ed-Era')
					li
						a(href='http://practicum.space/', target='_blank')
							img(src='/img/vaccination/partners/practicum-logo.png')
					li
						a(href='https://www.facebook.com/vaccination.ua/', target='_blank')
							img(src='/img/vaccination/partners/ГО _ВакциНація_.png')


